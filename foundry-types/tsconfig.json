{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@*": ["./src/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts",],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
